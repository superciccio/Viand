use Shell from "./Shell.viand"

component Home:
    head:
        title: "Viand Blog - Home"
        meta:
            description: "A blog built with Viand framework"
            keywords: "viand, blog, mpa"
    
    view:
        Shell:
            h1: "Viand Multi-Page Blog"
            p: "This is the home page. Every click triggers a full browser reload."

test Home:
    @ui:
        must find "h1" with text "Viand Multi-Page Blog"
        must find "p" with text "This is the home page"
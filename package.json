{
  "name": "viand-monorepo",
  "private": true,
  "type": "module",
  "description": "The Viand Programming Language ecosystem",
  "workspaces": [
    "packages/*",
    "editors/*",
    "project-test",
    "project-blog-spa",
    "project-blog-mpa"
  ],
  "scripts": {
    "dev": "node packages/cli/bin/viand.js dev",
    "build:compiler": "npm run build -w @viand/compiler",
    "build:lsp": "npm run build --prefix packages/lsp",
    "build:vscode": "npm run build --prefix viand-vscode",
    "test": "npm test --workspaces"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "acorn": "^8.15.0",
    "astring": "^1.9.0",
    "estree-walker": "^3.0.3",
    "h3": "^2.0.1-rc.11",
    "magic-string": "^0.30.21",
    "nitropack": "^2.13.1",
    "zod": "^4.3.6"
  }
}
